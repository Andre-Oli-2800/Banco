unit formMenu;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Menus, Vcl.StdCtrls;

type
  TformMenuInicial = class(TForm)
    MainMenu1: TMainMenu;
    Sacar1: TMenuItem;
    Sacar2: TMenuItem;
    Extrato1: TMenuItem;
    ransferir1: TMenuItem;
    Extrato2: TMenuItem;
    Sair1: TMenuItem;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    lblSaldo: TLabel;
    lblNome: TLabel;
    lblAgencia: TLabel;
    lblBanco: TLabel;
    Label6: TLabel;
    Label7: TLabel;
    procedure Sacar2Click(Sender: TObject);
    procedure FormShow(Sender: TObject);
    procedure Extrato2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  formMenuInicial: TformMenuInicial;

implementation

{$R *.dfm}

uses Unit5, unitSacar, formExtrato;

procedure TformMenuInicial.Extrato2Click(Sender: TObject);
begin
formExtratoConta.ShowModal;
end;

procedure TformMenuInicial.FormShow(Sender: TObject);
begin
  lblNome.Caption := DM.qCadastro.FieldByName('nome').AsString;
  DM.qDadosBancarios.Close;
  DM.qDadosBancarios.SQL.Clear;
  DM.qDadosBancarios.SQL.Add('select saldo from dadosBancarios where cpf = '+DM.qCadastro.FieldByName('cpf').AsString);
lblSaldo.Caption := DM.qDadosBancarios.FieldByName('saldo').AsString;
end;

procedure TformMenuInicial.Sacar2Click(Sender: TObject);
begin
  formSacar.showModal;
end;

end.
